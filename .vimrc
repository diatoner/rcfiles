set nocompatible
set relativenumber
set cursorline
set scrolloff=999
set wildmenu
set wildmode=list:longest
set syntax=on
set autoindent
set smartcase
set ignorecase
set visualbell
set showmatch
set ruler
set undolevels=1000
set ts=4 sts=4 expandtab
set sw=4
set tw=120
set hlsearch
set nowrap

nnoremap ; :
nnoremap <c-space> ct_
nnoremap <c-x> :x<cr>
nnoremap <Leader>w :w<cr>
nnoremap <Leader>q :q<cr>
nnoremap <Leader>h :nohl<cr>

set incsearch

map <C-l> <C-W>l
map <C-h> <C-W>h
map <C-j> <C-W>j
map <C-k> <C-W>k
